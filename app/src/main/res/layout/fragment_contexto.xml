<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="compclub.inf.com.logicinalogicway.Fragments.ContextoFragment"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/fragment_contexto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_Titulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Titulos"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_contexto"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_Titulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="true"
        android:text="Contexto" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_problema"
        android:textAlignment="textStart"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_below="@+id/tv_contexto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lv_questoes"
        android:layout_weight="0.80" />

    <Button
        android:text="Voltar"
        android:layout_height="wrap_content"
        android:id="@+id/bt_voltar"
        android:layout_width="match_parent" />

</LinearLayout>
